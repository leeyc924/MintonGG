{
  "extends": "@breadlee/tsconfig/react-library.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
